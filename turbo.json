{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "dist/**"]
    },
    "lint": {
      "outputs": []
    },
    "lint:fix": {
      "dependsOn": [],
      "outputs": [],
      "cache": false,
      "inputs": [
        "**/*.{ts,tsx,js,jsx}",
        "!**/node_modules/**",
        "!**/dist/**",
        "!**/.next/**"
      ],
      "persistent": false
    },
    "format": {
      "outputs": []
    },
    "format:fix": {
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "start": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**"]
    },
    "type-check": {
      "outputs": []
    },
    "e2e": {
      "dependsOn": ["build"],
      "outputs": ["playwright-report/**", "test-results/**"]
    }
  }
}
